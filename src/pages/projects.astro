---
import BaseLayout from "../layouts/BaseLayout.astro";
import { projects } from "../lib/projects.ts";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">

  <div class="text-left">
    <h2 class="text-3xl font-bold mb-2">PROJECTS</h2>
    <p class="text-gray-500 mb-6">
      Some of my projects over the years.
    </p>
  </div>

  {projects.map((project, index) => (
    <div class={`flex flex-col md:flex-row ${index % 2 !== 0 ? "md:flex-row-reverse" : ""} items-center gap-6 min-h-[300px]`}>
      <div class="md:w-1/2">
        <img src={project.img} alt={project.title} class="rounded-lg w-full shadow-md" />
      </div>

      <div class="md:w-1/2">
        <h3 class="text-xl font-bold">
          <a href={project.url} target="_blank" class="hover:underline">{project.title}</a>
        </h3>

        <p class="text-sm text-gray-600 mt-2 leading-relaxed">
          {project.description}
        </p>

        <!-- Tech Stack Badges -->
        <div class="mt-2 flex flex-wrap gap-2">
          {project.tech.map((tech) => (
            <span class="px-2 py-1 text-xs font-medium bg-gray-200 text-gray-800 rounded-md">
              {tech}
            </span>
          ))}
        </div>

        <!-- Links Section -->
        <div class="flex items-center gap-4 mt-2 text-sm font-medium">
          {project.github && (
            <a href={project.github} target="_blank" class="flex items-center gap-2 hover:opacity-70 transition">
              <img src="https://api.iconify.design/mdi:github.svg" alt="GitHub" class="w-4 h-4" />
              Source
            </a>
          )}
          {project.liveDemo && (
            <a href={project.liveDemo} target="_blank" class="flex items-center gap-2 hover:opacity-70 transition">
              <img src="https://api.iconify.design/mdi:link-variant.svg" alt="Live Demo" class="w-4 h-4" />
              Demo
            </a>
          )}
        </div>
      </div>
    </div>
    <div class="divider my-4"></div>
  ))}
</BaseLayout>