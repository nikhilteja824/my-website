---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
import { education } from "../lib/education.ts";
import { experience } from "../lib/experience.ts";
import { certifications } from "../lib/certifications.ts";
---

<BaseLayout title="Resume" sideBarActiveItemID="cv">

  <!-- Page Title -->
  <div class="text-left">
    <h2 class="text-3xl font-bold mb-2">RESUME</h2>
  </div>

  <!-- Right-Aligned Resume Download -->
  <div class="flex justify-end mb-6">
    <a href="/resume.pdf" download="Nikhil_Teja_Resume.pdf"
       class="px-3 py-1.5 text-sm text-white bg-gray-700 hover:bg-gray-800 rounded-md shadow-md flex items-center gap-2">
      ðŸ“„ Download My Resume
    </a>
  </div>

  <!-- Profile Section -->
  <div class="mb-5">
    <div class="text-xl font-bold">Profile</div>
  </div>
  <p class="mb-10 text-justify">
    Software engineer with a passion for designing scalable backend systems and optimizing distributed computing. 
    Experienced in Java, Spring Boot, microservices, and cloud architectures. Adept at leveraging high-performance 
    data stores, real-time analytics, and scalable APIs. Currently pursuing a Masterâ€™s at Stony Brook University.
  </p>

  <!-- Education Section -->
  <div class="mb-5">
    <div class="text-xl font-bold">Education</div>
  </div>
  <div class="time-line-container grid gap-6 mb-10"> <!-- Increased gap for better spacing -->
    {education.map((edu) => (
      <TimeLineElement title={edu.title}>
        <div class="text-gray-700 text-sm flex flex-wrap items-center gap-1">
          <a href={edu.institution.link} target="_blank" class="underline hover:no-underline">
            {edu.institution.name}
          </a>
          <span>|</span>
          <span>{edu.duration}</span>
        </div>
      </TimeLineElement>
    ))}
  </div>

  <!-- Experience Section -->
  <div class="mb-5">
    <div class="text-xl font-bold">Experience</div>
  </div>
  <div class="time-line-container mb-10">
    {experience.map((exp) => (
      <TimeLineElement title={exp.title}>
        <div class="text-gray-700 text-sm flex flex-wrap items-center gap-1">
          <a href={exp.company.link} target="_blank" class="underline hover:no-underline">
            {exp.company.name}
          </a>
          <span>|</span>
          <span>{exp.duration}</span>
        </div>
  
        <!-- Experience Description Categories & Points -->
        {exp.description.map((category) => (
          <div class="mt-3">
            <strong class="text-gray-900">{category.category}</strong>
            <ul class="list-disc ml-6 mt-1 text-gray-700">
              {category.points.map((point) => (
                <li>{point}</li>
              ))}
            </ul>
          </div>
        ))}
      </TimeLineElement>
    ))}
  </div>

  <!-- Certifications Section -->
  <div class="mb-5">
    <div class="text-xl font-bold">Certifications</div>
  </div>
  <ul class="list-disc mx-6 mb-10 grid gap-2">
    {certifications.map((cert) => (
      <li>
        <a href={cert.link} target="_blank" class="text-blue-600 hover:text-blue-800">
          {cert.name}
        </a>
      </li>
    ))}
  </ul>

  <!-- Skills Section -->
  <div class="mb-5">
    <div class="text-xl font-bold">Skills</div>
    <a href={`${import.meta.env.BASE_URL}skills/`} class="text-blue-600 hover:text-blue-800 text-lg">
      View My Full Skillset â†’
    </a>
  </div>

</BaseLayout>